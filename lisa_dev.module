<?php

function lisa_dev_get_unsafe_query(SelectQuery $query) {
  $args = $query->getArguments();
  foreach ($args as $key => $value) {
    if (!is_numeric($value)) {
      $args[$key] = "'" . $value . "'";
    }
  }
  $args += array(
    '{' => '',
    '}' => ' AS',
  );
  return str_replace(array_keys($args), array_values($args), (string) $query) . PHP_EOL;
}
